      env_name: { get_param: env_name }
      management_net: { list_join: ['-', [ 'management_net', { get_param: env_name } ]] }
      control_net: { list_join: ['-', [ 'control_net', { get_param: env_name } ]] }
      tenant_net: { list_join: ['-', [ 'tenant_net', { get_param: env_name } ]] }
